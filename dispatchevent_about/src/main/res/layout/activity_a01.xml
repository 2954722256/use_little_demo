<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/allRl"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/background_light">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.aohuan.dodo.dispatchevent_about.dispatch_group.view.TouchEventFather
            android:id="@+id/father"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:background="#468AD7"
            android:orientation="vertical">
            <com.aohuan.dodo.dispatchevent_about.dispatch_group.view.TouchEventChilds
                android:id="@+id/childs"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="50dp"
                android:background="#E1110D">
                <com.aohuan.dodo.dispatchevent_about.dispatch_group.view.TouchEventChilds2
                    android:id="@+id/childs2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="50dp"
                    android:background="@drawable/btn_selector"
                    android:text="Child2Btn" />
            </com.aohuan.dodo.dispatchevent_about.dispatch_group.view.TouchEventChilds>
        </com.aohuan.dodo.dispatchevent_about.dispatch_group.view.TouchEventFather>
    </RelativeLayout>


    <com.aohuan.dodo.dispatchevent_about.dispatch_group.view.EventButton
        android:id="@+id/testBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="50dp" />

    <com.aohuan.dodo.dispatchevent_about.dispatch_group.view.EventViewGroup
        android:id="@+id/testLl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="50dp"
        android:background="@android:color/darker_gray" />


</RelativeLayout>