<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/m_parent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f1f1"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_main"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#1e8ae8"
            app:tabGravity="fill"
            app:tabIndicatorColor="#fff"
            app:tabIndicatorHeight="4dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#fff"
            app:tabTextColor="#97c8f4" />

        <include layout="@layout/view_min_division" />

        <!--<android.support.v4.view.ViewPager-->
        <!--<com.aohuan.dodo.viewdemo.temp.pagerhelper.ParentViewPager-->
        <com.aohuan.dodo.viewdemo.temp.pagerhelper.NoScrollViewPager2
            android:id="@+id/m_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</RelativeLayout>
