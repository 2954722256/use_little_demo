<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="15px"
        android:paddingBottom="15px"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/m_no_data_image"
            android:layout_width="142px"
            android:src="@mipmap/logo_dw"
            android:layout_height="33px" />
        <ImageView
            android:id="@+id/m_data_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/m_no_data_image"
            android:src="@anim/header_dodo_bga_refresh_loading"/>
        <TextView
            android:id="@+id/m_text"
            android:layout_width="wrap_content"
            android:layout_below="@+id/m_no_data_image"
            android:layout_toRightOf="@+id/m_data_image"
            android:layout_height="wrap_content"
           android:layout_marginTop="10px"
            android:text="加载中..."
            android:textColor="#777"
            android:textSize="12sp" />
    </RelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
